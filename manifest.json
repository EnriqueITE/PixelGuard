{
  "manifest_version": 2,
  "name": "__MSG_extensionName__",
  "description": "__MSG_extensionDescription__",
  "version": "0.1.23",
  "homepage_url": "https://github.com/EnriqueITE/Pixel-Guard",
  "author": "Enrique Serrano Aparicio",
  "default_locale": "en",
  "applications": {
    "gecko": {
      "id": "pixel-guard@enriqueite.com",
      "strict_min_version": "115.0"
    }
  },
  "permissions": [
    "experiments",
    "messagesRead",
    "tabs",
    "storage",
    "webRequest",
    "webRequestBlocking",
    "<all_urls>"
  ],
  "background": {
    "scripts": ["background.js"]
  },
  "browser_action": {
    "default_title": "__MSG_extensionName__",
    "default_popup": "popup/popup.html"
  },
  "message_display_action": {
    "default_title": "__MSG_extensionName__",
    "default_popup": "popup/popup.html"
  },
  "options_ui": {
    "page": "options/options.html",
    "browser_style": true,
    "open_in_tab": true
  },
  "experiment_apis": {
    "pgPolicy": {
      "schema": "experiments/pgpolicy/schema.json",
      "parent": {
        "scopes": ["addon_parent"],
        "paths": [["pgPolicy"]],
        "script": "experiments/pgpolicy/parent.js",
        "events": ["startup"]
      }
    }
  }
}
