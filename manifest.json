{
  "manifest_version": 2,
  "name": "__MSG_extensionName__",
  "description": "__MSG_extensionDescription__",
  "version": "0.1.24",
  "homepage_url": "https://github.com/EnriqueITE/Pixel-Guard",
  "author": "Enrique Serrano Aparicio",
  "default_locale": "en",
  "browser_specific_settings": {
    "gecko": {
      "id": "pixel-guard@enriqueite.com",
      "strict_min_version": "115.0"
    }
  },
  "permissions": [
    "messagesRead",
    "tabs",
    "storage"
  ],
  "background": {
    "scripts": ["background.js"]
  },
  "icons": {
    "48": "assets/icon-48.png",
    "96": "assets/icon-96.png"
  },
  "browser_action": {
    "default_title": "__MSG_extensionName__",
    "default_popup": "popup/popup.html",
    "default_icon": {
      "48": "assets/icon-48.png"
    }
  },
  "message_display_action": {
    "default_title": "__MSG_extensionName__",
    "default_popup": "popup/popup.html",
    "default_icon": {
      "48": "assets/icon-48.png"
    }
  },
  "options_ui": {
    "page": "options/options.html",
    "browser_style": true,
    "open_in_tab": true
  }
}
